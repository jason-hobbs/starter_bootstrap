= bootstrap_form_for @user do |f|
  %fieldset
    .form-group
      .row
        .col-sm-12
          = f.text_field :name, icon: "user", hide_label: true, placeholder: "Name"
      .row
        .col-sm-12
          = f.email_field :email, icon: "envelope", hide_label: true, placeholder: "Email Address"
      .row
        .col-sm-12
          = f.password_field :password, icon: "eye-close", hide_label: true, placeholder: "Password"
      .row
        .col-sm-12
          = f.password_field :password_confirmation, hide_label: true, icon: "eye-close", placeholder: "Password again"
    = f.submit "Sign Up", class: "btn btn-default"
