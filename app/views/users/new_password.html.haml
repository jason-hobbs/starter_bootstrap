%br/
.container
  .row
    .col-sm-3
    .col-sm-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title Choose new password
        .panel-body
          = bootstrap_form_for @user, :url => {:action => "set_pass"} do |f|
            %fieldset
              .form-group
                .row
                  .col-sm-12
                    = f.password_field :password, icon: "eye-close", hide_label: true, placeholder: "Password"
                .row
                  .col-sm-12
                    = f.password_field :password_confirmation, hide_label: true, icon: "eye-close", placeholder: "Password again"
                = hidden_field_tag 'token', @token
                = f.submit "Change password", class: "btn btn-default"
    .col-sm-3
