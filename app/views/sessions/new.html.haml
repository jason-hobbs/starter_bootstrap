%br/
.container
  .row
    .col-sm-3
    .col-sm-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title Sign In
        .panel-body
          = bootstrap_form_tag url: '/sessions', class: 'sign_in' do |f|
            %fieldset
              .form-group
                .row
                  .col-sm-12
                    = f.email_field :email, icon: "envelope", hide_label: true, placeholder: "Email Address"
                .row
                  .col-sm-12
                    = f.password_field :password, icon: "eye-close", hide_label: true, placeholder: "Password"
                .row
                  .col-sm-12
                    = link_to "Forgot password?", forgot_password_path
            %fieldset.form-group.action
              %input(type="submit" value="Sign in" class="btn btn-default")
    .col-sm-3
