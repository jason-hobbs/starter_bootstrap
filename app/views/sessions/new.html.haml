%br/
.container
  .row
    .col-sm-2
    .col-sm-8
      .panel.panel-default
        .panel-heading
          %h3.panel-title Sign In
        .panel-body
          = bootstrap_form_tag url: '/sessions', class: 'sign_in' do |f|
            %fieldset
              .form-group
                .row
                  .col-sm-12
                    = f.email_field :email, icon: "user", label: "Email Address"
                .row
                  .col-sm-12
                    = f.password_field :password, label: "Password"
                .row
                  .col-sm-12
                    = f.check_box :remember_me
            %fieldset.form-group.action
              %input(type="submit" value="Sign in" class="btn btn-default")
    .col-sm-2
